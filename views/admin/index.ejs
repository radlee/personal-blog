
<h3>Sign In</h3>
<div class="flash-alert">
  <% if ( messages.success ) { %>
    <p class="flash-success"><strong>SUCCESS!</strong> <%= messages.success %></p>
  <% } %>
  <% if ( messages.error ) { %>
    <p class="flash-error"><strong>ERROR!</strong> <%= messages.error %></p>
  <% } %>
</div>
<form action="/admin" method="post">

    <label for="username"><b>Username</b></label>
    <input type="text" placeholder="Enter Username" name="username">
    
    <label for="password"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="password">

    <input type="submit" value="Login" class="articles__button">
    <p>Do not have an account? <a href="/register" class="button">Register. </a></p>

</form>

