<style>
  .ql-font-roboto {
    font-family: 'Poppins';
  }

  .btn-delete {
    margin-left: auto;
}

  /* Style for the custom file input button */
  .file-upload {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .file-upload-btn {
    display: inline-block;
    padding: 8px 16px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .file-input {
    display: none;
  }

  .file-upload-icon {
    margin-bottom: 8px;
    font-size: 24px;
  }

  .current-image {
    max-width: 100%;
    margin-top: 10px;
  }

  .form-footer {
    display: flex;
    justify-content: flex-end;
}
