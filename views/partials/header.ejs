<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
  /* ... Your existing styles ... */

  #navbarcontainer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  #navbarcontainer ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    align-items: baseline;
    flex: 1 0 0%;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease; /* Updated to 0.5s for smoother animation */
  }

  #navbarcontainer ul.menu-open {
    max-height: 500px; /* Adjust this value based on your content height */
  }

  #navbarcontainer ul.menu-open li {
    text-align: center;
    padding: 10px; /* Add padding to the links */
  }

  #navbarcontainer ul.menu-open a {
    display: block;
    color: gray;
    text-decoration: none;
    font-size: 1rem;
    border-bottom: 1px solid #000;
    /* background: #fff; */
    margin-right: 10px; /* Add right margin to the links */
  }

  #navbarcontainer ul.menu-open a:last-child {
    border-bottom: none;
  }

  #navbarcontainer ul.menu-open .icon {
    display: none;
  }

  #navbarcontainer ul.menu-open .icon .fa-times-circle-o {
    display: none; /* Hide close icon by default */
    position: fixed;
    z-index: 1000;
    left: 0.8rem;
    top: 0.8rem;
  }

  #navbarcontainer.menu-open .icon .fa-bars,
  #navbarcontainer.menu-open .icon .fa-times-circle-o {
    display: block; /* Show both icons when the menu is open */
    position: fixed;
    right: 10px;
    top: 10px;
  }

  #navbarcontainer ul.menu-open .icon:hover {
    background: transparent;
  }

  #navbarcontainer ul.menu-open .icon:focus {
    outline: 1px dotted #ccc;
  }

  .icon {
    /* Add your custom styling for the menu icon here */
    padding: 10px;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    transition: background 0.3s ease; /* Smoother background transition */
  }

  .searchBtn {
    /* Add your custom styling for the search button here */
    
    border: none;
    font-size: 1rem;
    cursor: pointer;
  }

  .fa-times-circle-o  {
    color: red;
  }

  .searchBtn {
    float: right ;
  }



</style>

<script>
  document.addEventListener('DOMContentLoaded', function(){

const allButtons = document.querySelectorAll('.searchBtn');
const searchBar = document.querySelector('.searchBar');
const searchInput = document.getElementById('searchInput');
const searchClose = document.getElementById('searchClose');
// 
for (var i = 0; i < allButtons.length; i++) {
    allButtons[i].addEventListener('click', function() {
        searchBar.style.visibility = 'visible';
        searchBar.classList.add('open');
        this.setAttribute('aria-expanded', 'true');
        searchInput.focus();
    })
}

searchClose.addEventListener('click', function() {
    searchBar.style.visibility = 'hidden';
    searchBar.classList.remove('open');
    this.setAttribute('aria-expanded', 'false');
})
})

document.addEventListener("DOMContentLoaded", function () {
const menuIcon = document.querySelector('.menu-icon');
const headerNav = document.querySelector('.header__nav');

menuIcon.addEventListener('click', function () {
  headerNav.classList.toggle('menu-visible');
});
});

</script>
<br />
<nav>
  
  <div id="navbarcontainer">
