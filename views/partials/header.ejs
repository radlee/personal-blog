<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
  /* ... Your existing styles ... */

  #navbarcontainer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  #navbarcontainer ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    align-items: baseline;
    flex: 1 0 0%;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease; /* Updated to 0.5s for smoother animation */
  }

  #navbarcontainer ul.menu-open {
    max-height: 500px; /* Adjust this value based on your content height */
  }

  #navbarcontainer ul.menu-open li {
    text-align: center;
    padding: 10px; /* Add padding to the links */
  }

  #navbarcontainer ul.menu-open a {
    display: block;
    color: gray;
    text-decoration: none;
    font-size: 1rem;
    border-bottom: 1px solid #000;
    /* background: #fff; */
    margin-right: 10px; /* Add right margin to the links */
  }

  #navbarcontainer ul.menu-open a:last-child {
    border-bottom: none;
  }

  #navbarcontainer ul.menu-open .icon {
    display: none;
  }

  #navbarcontainer ul.menu-open .icon .fa-times-circle-o {
    display: none; /* Hide close icon by default */
    position: fixed;
    z-index: 1000;
    left: 0.8rem;
    top: 0.8rem;
  }

  #navbarcontainer.menu-open .icon .fa-bars,
  #navbarcontainer.menu-open .icon .fa-times-circle-o {
    display: block; /* Show both icons when the menu is open */
    position: fixed;
    right: 10px;
    top: 10px;
  }

  #navbarcontainer ul.menu-open .icon:hover {
    background: transparent;
  }

  #navbarcontainer ul.menu-open .icon:focus {
    outline: 1px dotted #ccc;
  }

  .icon {
    /* Add your custom styling for the menu icon here */
    padding: 10px;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    transition: background 0.3s ease; /* Smoother background transition */
  }

  .searchBtn {
    /* Add your custom styling for the search button here */
    padding: 10px;
    border: none;
    font-size: 1rem;
    cursor: pointer;
  }

  .fa-times-circle-o  {
    color: red;
  }



</style>
<br />
<nav>
  <div id="navbarcontainer">
    <button class="icon" onclick="toggleMenu()">
      <i class="fa fa-bars fa-2x"></i>
      <i class="fa fa-times-circle-o fa-2x"></i>
      <span></span>
    </button>
    <ul class="header-ul">
      <li><a href="/" class="<%= isActiveRoute('/', currentRoute) %>">Home</a></li>
<li><a href="/dashboard" class="<%= isActiveRoute('/dashboard', currentRoute) %>">Dashboard</a></li>

<div class="toggle-container">
  <label class="switch">
      <input type="checkbox" id="darkModeToggle">
      <span class="slider"></span>
  </label>
  <span class="toggle-label">Dark Mode</span>
</div>

  </ul>
</nav>
  </div>
</nav>


<script>
  document.addEventListener('DOMContentLoaded', function () {
    const menuIcon = document.querySelector('.icon .fa-bars');
    const closeIcon = document.querySelector('.icon .fa-times-circle-o');

    // Hide close icon and show menu icon
    menuIcon.style.display = 'block';
    closeIcon.style.display = 'none';


    
  });

  function toggleMenu() {
    const navLinks = document.querySelector('#navbarcontainer ul');
    const body = document.querySelector('body');
    const closeIcon = document.querySelector('.icon .fa-times-circle-o');
    const menuIcon = document.querySelector('.icon .fa-bars');

    if (body.classList.contains('menu-open')) {
      navLinks.style.maxHeight = '0';
      body.classList.remove('menu-open');
      closeIcon.style.display = 'none'; // Hide close icon when the menu is closed
      menuIcon.style.display = 'block'; // Show the menu icon when the menu is closed
    } else {
      navLinks.style.maxHeight = '500px'; // Adjust this value based on your content height
      body.classList.add('menu-open');
      closeIcon.style.display = 'block'; // Show the close icon when the menu is open
      menuIcon.style.display = 'none'; // Hide the menu icon when the menu is open
    }
  }


</script>
