    <section class="articles">
    <hr />
    <h3 class="articles__heading"><span >Latest Posts</span></h3>

    <% if (data != '') { %>

        <% data.forEach((post, index) => { %>
        <article <%= index %>>
            <a  href="/post/<%= post._id %>">
            <hr />
          <div class="article-wrapper">
            <figure class="image-container">
              <img class="img-thumbnail" src="<%= '/uploads/' + post.image %>" alt="" />
            </figure>
            <div class="article-body">
              <h2><%= post.title %></h2>
              <p>
                <%= post.author.username %>
              </p>
              
              <br />
              <a  href="/post/<%= post._id %>" >
               <%= moment(post.createdAt).format('Do MMMM YYYY - HH:mm:ss') %>
                
              </a>
            </div>
          </div>
        </a>
        </article>
        <% }) %>

   <% } else { %>
            <h1>No Posts found in the DB</h1>
        <% } %>
            




    <% if ( nextPage !== null ) { %> 
        <a href='/?page=<%= nextPage %>' class='pagination'>&lt; Older</a>
    <% } %>

    <% if (current > 1) { %>
        <a href="/?page=<%= current - 1 %>" class="pagination pagination-right">Newer &gt;</a>
    <% } %>

</section>