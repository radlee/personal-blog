    <h1 class="author_heading">Hi, I'm Lolito</h1>
    <p class="author__body">Agile Full Stack MERN 👨‍💻 </p>
</div>

<img src="/img/hero.webp" alt="gscc" class="hero-image" width="1920" height="1080">

<section class="articles">
    <hr />
    <h3 class="articles__heading"><span >Latest Posts</span></h3>
    <hr />
    <ul class="article-ul">

        <% data.forEach(post => { %>
            <li>
                 <a href="/post/<%= post._id %>">
                     <span><%= post.title %></span>
                     <span class="article-list__date"><%= moment(post.createdAt).format('Do MMMM YYYY - HH:mm:ss') %></span>
                 </a>
            </li>
        <% }) %>
           
    </ul>

    <% if ( nextPage !== null ) { %> 
        <a href='/?page=<%= nextPage %>' class='pagination'>&lt; Older</a>
    <% } %>

    <% if (current > 1) { %>
        <a href="/?page=<%= current - 1 %>" class="pagination pagination-right">Newer &gt;</a>
    <% } %>

</section>